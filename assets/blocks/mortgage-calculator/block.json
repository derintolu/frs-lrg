{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "lrh/mortgage-calculator",
  "version": "1.0.0",
  "title": "Mortgage Calculator",
  "category": "frs-blocks",
  "description": "5-in-1 mortgage calculator with lead capture for landing pages",
  "keywords": [
    "mortgage",
    "calculator",
    "loan",
    "finance",
    "leads"
  ],
  "textdomain": "lending-resource-hub",
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "attributes": {
    "defaultCalculatorType": {
      "type": "string",
      "default": "conventional",
      "enum": [
        "conventional",
        "va",
        "fha",
        "refinance",
        "affordability"
      ]
    },
    "showPropertyTax": {
      "type": "boolean",
      "default": true
    },
    "showInsurance": {
      "type": "boolean",
      "default": true
    },
    "showHOA": {
      "type": "boolean",
      "default": true
    },
    "showPMI": {
      "type": "boolean",
      "default": true
    },
    "primaryColor": {
      "type": "string",
      "default": "#2563eb"
    },
    "secondaryColor": {
      "type": "string",
      "default": "#2dd4da"
    },
    "ctaButtonText": {
      "type": "string",
      "default": "Get Pre-Qualified"
    },
    "disclaimerText": {
      "type": "string",
      "default": "This calculator provides estimates only. Actual rates and terms may vary."
    },
    "showDisclaimer": {
      "type": "boolean",
      "default": true
    },
    "enableLeadCapture": {
      "type": "boolean",
      "default": true
    },
    "leadCaptureTitle": {
      "type": "string",
      "default": "Get Your Custom Quote"
    },
    "leadCaptureDescription": {
      "type": "string",
      "default": "Enter your information and we'll connect you with a loan officer."
    }
  },
  "supports": {
    "html": false,
    "customClassName": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "example": {}
}